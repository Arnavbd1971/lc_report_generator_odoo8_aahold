<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data> 

        <!-- Top menu -->
        <menuitem name="LC Documents" id="custom_top_menu" />
        <!-- Sub child menu -->
        <menuitem name="LC Documents" id ="custom_sub_menu" parent="custom_top_menu"/>

        <!--Import assets-->
        <template id="assets_backend" name="custom assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/lc_report_generator/static/src/css/style.css"/>
                <!-- <script type="text/javascript" src="/lc_report_generator/static/src/js//myscript.js"/> -->
            </xpath>
        </template>
        <!-- inherit_id="web.assets_frontend" -->
        <!--Import assets-->

        <!-- certificate_of_origin start -->

            <!-- <tree view start> -->
                <record id="view_certificate_of_origin_tree" model="ir.ui.view">
                    <field name="name">certificate_of_origin.model.tree</field>
                    <field name="model">certificate_of_origin.model</field>
                    <field name="priority" eval="8" />
                    <field name="arch" type="xml">
                        <tree string="Certificate_Of_Origin" default_order="id desc">
                            <field name="name" /> 
                            <field name="date" />
                            <field name="commercial_invoice_id" />
                            <field name="supplied_product" />
                            <field name="lc_num" /> 
                            <field name="delivery_challan_no" />
                        </tree>
                    </field>
                </record>
            <!-- <tree view end> -->

            <!-- <form view start> -->
                <record id="view_certificate_of_origin_form" model="ir.ui.view">
                    <field name="name">certificate_of_origin.form</field>
                    <field name="model">certificate_of_origin.model</field>
                    <field name="arch" type="xml">
                        <form string="Certificate_Of_Origin">
                            <header>
                            </header>
                
                            <sheet string="Certificate_Of_Origin"> 
                                <div class='col-xs-6'>
                                    <group>
                                        <field name="commercial_invoice_id" on_change="onchange_commercial_invoice_id(commercial_invoice_id)"/>
                                        <field name="name" />
                                        <field name="date" /> 
                                    </group>
                                </div>
                                <div class='col-xs-6'></div>  

                                <div class="col-xs-12" style='margin-top:10px;'>
                                    <h2 class="mt1 com_invoice_title">
                                        <span class="com_invoice_title_span">CERTIFICATE OF ORIGIN</span>
                                    </h2>
                                </div>

                                <div class="row">
                                    <div class="col-xs-12" style='margin-top:30px;'>
                                        <p>
                                            We hereby declare that the <field name="supplied_product" class='oe_inline' nolabel="1"/> supplied L/C No. <field name="lc_num" class='oe_inline' nolabel="1"/> dated <field name="lc_date" class='oe_inline' nolabel="1"/> against Export Sales Contact No. <field name="contact_no" class='oe_inline' nolabel="1"/>  under our Commercial Invoice No. <field name="commercial_invoice_no" class='oe_inline' nolabel="1"/> dated <field name="commercial_invoice_created_date" class='oe_inline' nolabel="1"/> Delivery Challan No. <field name="delivery_challan_no" class='oe_inline' nolabel="1"/> dated <field name="delivery_challan_created_date" class='oe_inline' nolabel="1"/> is of <field name="country_of_origin" class='oe_inline' nolabel="1"/> origin which have been manufactured in our factory at <field name="dealer_factory_name" class='oe_inline' nolabel="1"/>
                                        </p>
                                    </div>

                                    <div class="col-xs-12" style=' margin-top:90px;'>
                                        <p stle='float:left;border-top:1px solid #000;'>Authorized Signature</p>
                                    </div>
                                </div>    


                            </sheet>
                        </form>
                    </field>
                </record>
            <!-- <form view end> -->                     

            <!-- <search start> -->
            <record id="view_certificate_of_origin_search" model="ir.ui.view">
                <field name="name">certificate_of_origin.model.search</field>
                <field name="model">certificate_of_origin.model</field>
                <field name="priority" eval="8" />
                <field name="arch" type="xml">
                    <search string="Certificate_Of_Origin">
                        <field name="name" />
                        <field name="commercial_invoice_id" />
                        <field name="date" />
                        <field name="supplied_product" />
                        <field name="lc_num" />
                        <field name="lc_date" />
                        <field name="contact_no" />
                        <field name="commercial_invoice_no" />
                        <field name="commercial_invoice_created_date" />
                        <field name="delivery_challan_no" />
                        <field name="delivery_challan_created_date" />
                        <field name="country_of_origin" />
                        <field name="dealer_factory_name" />
                    </search>
                </field>
            </record>
            <!-- <search end> -->

            <!-- <act_window start> -->
                <record id="act_open_certificate_of_origin_view" model="ir.actions.act_window">
                    <field name="name">Certificate Of Origin</field>
                    <field name="type">ir.actions.act_window</field>
                    <field name="res_model">certificate_of_origin.model</field>
                    <field name="view_type">form</field>
                    <field name="view_mode">tree,form</field>
                    <field name="search_view_id" ref='view_certificate_of_origin_search'/>
                    <field name='domain'>[]</field>
                    <field name="context">{}</field>
                    <field name="help" type="html">
                        <p class="oe_view_nocontent_create">
                            Click here to creat Certificate Of Origin
                        </p>
                    </field>
                </record>
                 <record model="ir.actions.act_window.view" id="act_open_certificate_of_origin_view_tree">
                    <field name="act_window_id" ref="act_open_certificate_of_origin_view" />
                    <field name="sequence" eval="10" />
                    <field name="view_mode">tree</field>
                    <field name="view_id" ref="view_certificate_of_origin_tree" />
                </record>
                <record model="ir.actions.act_window.view" id="act_open_certificate_of_origin_view_form">
                    <field name="act_window_id" ref="act_open_certificate_of_origin_view" />
                    <field name="sequence" eval="20" />
                    <field name="view_mode">form</field>
                    <field name="view_id" ref="view_certificate_of_origin_form" />
                </record>
            <!-- <act_window end> -->
        <!-- certificate_of_origin end -->

        <menuitem action="act_open_certificate_of_origin_view" name="Certificate Of Origin" id="custom_child_menu8" parent="custom_sub_menu"  sequence="8"/> 


        <!-- pdf report generate start-->
        <report
            id="report_of_certificate_of_origin" 
            model="certificate_of_origin.model"
            string="Certificate Of Origin"
            name="lc_report_generator.report_certificate_of_origin_report_view"
            file="lc_report_generator.certificate_of_origin.model"
            report_type="qweb-pdf"/>

            <template id="report_certificate_of_origin_report_view">
                    
                <t t-call="report.external_layout" t-lang="en_US">              
                    <t t-foreach="docs" t-as="o">
                        <t>          
                            <div class="page" style='margin-left:30px !important;'>
                               <!-- < page content start> -->
                               <div class="row">
                                <div class='col-xs-6'>
                                        <group>
                                            <p style='font-weight:bold;'>Ref.No : <span t-field="o.name" /></p>
                                            <p style='font-weight:bold;'><span t-field="o.date" /></p> 
                                        </group>
                                    </div>
                                    <div class='col-xs-6'></div>
                                </div>

                                <div class="row">
                                    <div class="container">
                                        <h4 class="text-center"><span style='border-bottom:2px solid #000;font-weight:bold;'>CERTIFICATE OF ORIGIN</span>
                                        </h4>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-12" style='margin-top:30px;'>
                                        <p>
                                            We hereby declare that the <span style='font-weight:bold;'><span t-field="o.supplied_product" /></span> supplied L/C No. <span style='font-weight:bold;'><span t-field="o.lc_num" /> dated <span t-field="o.lc_date" /></span> against Export Sales Contact No. <span style='font-weight:bold;'><span t-field="o.contact_no" /> </span> under our Commercial Invoice No. <span style='font-weight:bold;'><span t-field="o.commercial_invoice_no" /> dated <span t-field="o.commercial_invoice_created_date" /></span> Delivery Challan No. <span style='font-weight:bold;'><span t-field="o.delivery_challan_no" /> dated <span t-field="o.delivery_challan_created_date" /></span> is of <span style='font-weight:bold;'><span t-field="o.country_of_origin" /></span> origin which have been manufactured in our factory at <span style='font-weight:bold;'><span t-field="o.dealer_factory_name" /></span>
                                        </p>
                                    </div>

                                    <div class="col-xs-12" style=' margin-top:90px;'>
                                        <p stle='float:left;border-top:1px solid #000;'>Authorized Signature</p>
                                    </div>
                                </div>
                               <!-- < page content start> -->
                            </div>
                         </t>
                    </t>
                </t>
            </template>                                                

    </data>
</openerp>        